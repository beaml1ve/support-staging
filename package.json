{
  "name": "support-staging-monorepo",
  "version": "1.0.0",
  "description": "Support staging environment monorepo with platform-specific workspaces",
  "private": true,
  "workspaces": [
    "platforms/*"
  ],
  "scripts": {
    "preinstall": "node scripts/validate-sparse-checkout.js --quiet",
    "postinstall": "echo 'âœ… Installation complete for' $(node scripts/validate-sparse-checkout.js --get-platform --quiet) 'platform'",
    "validate-checkout": "node scripts/validate-sparse-checkout.js --validate",
    "get-platform": "node scripts/validate-sparse-checkout.js --get-platform --quiet",
    "clean": "npm run clean --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces",
    "lint": "npm run lint --workspaces",
    "protect-rules": "node scripts/protect-rules.js protect",
    "unprotect-rules": "node scripts/protect-rules.js unprotect",
    "rules-status": "node scripts/protect-rules.js status"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/beaml1ve/support-staging.git"
  },
  "keywords": [
    "support",
    "staging",
    "monorepo",
    "platform",
    "infrastructure"
  ],
  "author": "Beam Live Support Team",
  "license": "MIT"
}
