{
  "name": "support-staging-monorepo",
  "version": "1.0.0",
  "description": "Support staging environment monorepo with platform-specific workspaces",
  "private": true,
  "workspaces": [
    "platforms/*",
    "utilities/*",
    "slack-webhook"
  ],
  "scripts": {
    "preinstall": "node scripts/validate-sparse-checkout.js --quiet",
    "postinstall": "echo 'âœ… Installation complete for' $(node scripts/validate-sparse-checkout.js --get-platform --quiet) 'platform'",
    "validate-checkout": "node scripts/validate-sparse-checkout.js --validate",
    "get-platform": "node scripts/validate-sparse-checkout.js --get-platform --quiet",
    "clean": "npm run clean --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces",
    "lint": "npm run lint --workspaces",
    "protect-rules": "node scripts/protect-rules.js protect",
    "unprotect-rules": "node scripts/protect-rules.js unprotect",
    "rules-status": "node scripts/protect-rules.js status",
    "open-session": "node session/scripts/open-session.js",
    "close-session": "node session/scripts/close-session.js",
    "session-status": "node session/scripts/session-status.js",
    "list-sessions": "node session/scripts/list-sessions.js",
    "pm2-save-state": "node pm2/scripts/pm2m save",
    "pm2-restore-state": "node pm2/scripts/pm2m restore",
    "pm2-show-state": "node pm2/scripts/pm2m show",
    "pm2-list-states": "node pm2/scripts/pm2m list",
    "pm2-start": "node pm2/scripts/pm2m start",
    "pm2-stop": "node pm2/scripts/pm2m stop",
    "pm2-restart": "node pm2/scripts/pm2m restart",
    "pm2-reload": "node pm2/scripts/pm2m reload",
    "pm2-info": "node pm2/scripts/pm2m info",
    "pm2-logs": "node pm2/scripts/pm2m logs",
    "pm2-daemon-restart": "node pm2/scripts/pm2-daemon-restart.js",
    "pm2-test": "node pm2/scripts/pm2-test-runner.js",
    "slack-notify": "npm run notify --workspace=slack-webhook --",
    "slack-test": "npm run test --workspace=slack-webhook",
    "slack-setup": "npm run setup --workspace=slack-webhook",
    "slack-validate": "npm run validate-config --workspace=slack-webhook",
    "slack-cleanup": "npm run cleanup-duplicates --workspace=slack-webhook",
    "slack-cleanup-dry": "npm run cleanup-duplicates-dry --workspace=slack-webhook"
  },
  "dependencies": {
    "pm2": "^5.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/beaml1ve/support-staging.git"
  },
  "keywords": [
    "support",
    "staging",
    "monorepo",
    "platform",
    "infrastructure"
  ],
  "author": "Beam Live Support Team",
  "license": "MIT"
}
