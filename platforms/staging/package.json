{
  "name": "@support-staging/platform-staging",
  "version": "1.0.0",
  "description": "Staging platform support tools and documentation",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "echo 'Staging platform workspace'",
    "test": "echo 'No tests specified for staging platform'",
    "lint": "echo 'No linting configured for staging platform'",
    "clean": "rm -rf node_modules dist",
    "open-session": "node ../../session/scripts/open-session.js",
    "close-session": "node ../../session/scripts/close-session.js",
    "session-status": "node ../../session/scripts/session-status.js",
    "list-sessions": "node ../../session/scripts/list-sessions.js",
    "pm2-save-state": "node ../../pm2/scripts/pm2m staging save",
    "pm2-restore-state": "node ../../pm2/scripts/pm2m staging restore",
    "pm2-show-state": "node ../../pm2/scripts/pm2m staging show",
    "pm2-list-states": "node ../../pm2/scripts/pm2m staging list",
    "pm2-start": "node ../../pm2/scripts/pm2m staging start",
    "pm2-stop": "node ../../pm2/scripts/pm2m staging stop",
    "pm2-restart": "node ../../pm2/scripts/pm2m staging restart",
    "pm2-reload": "node ../../pm2/scripts/pm2m staging reload",
    "pm2-info": "node ../../pm2/scripts/pm2m staging info",
    "pm2-logs": "node ../../pm2/scripts/pm2m staging logs",
    "pm2-daemon-restart": "node ../../pm2/scripts/pm2-daemon-restart.js staging"
  },
  "dependencies": {
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "keywords": [
    "staging",
    "platform",
    "support",
    "redis",
    "pm2",
    "infrastructure"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/beaml1ve/support-staging.git",
    "directory": "platforms/staging"
  },
  "platform": {
    "name": "staging",
    "type": "beamdevlive",
    "services": {
      "redis": {
        "bds": "10.128.0.21:6379",
        "bull": "10.128.0.21:6377",
        "log": "standalone"
      },
      "postgresql": "localhost:5432",
      "apache2": "localhost:80,443",
      "mosquitto": "localhost:1883",
      "tile38": "localhost:9851",
      "haproxy": "localhost:6377"
    }
  }
}
